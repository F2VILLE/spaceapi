{
  "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "node",
      "target": "ES2016",
      "outDir": "lib",
      "sourceMap": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "skipDefaultLibCheck": true,
      "declaration": true,
      "resolveJsonModule": true,
      "noUnusedLocals": true,
      "baseUrl": ".",
      "paths": {
          "@Class/*": [
              "./class/*"
          ],
          "@Types/*": [
              "./types/*"
          ],
      }
  },
  "include": ["src"],
  "exclude": [
      "node_modules/**/*",
      "lib/**/*"
  ]
}